<div class="form-group">
    <%= form_tag mappings_new_tables_path, method: :get do |form| %>
        <div class='form-group'>
            <div class="column col-9 col-sm-12">
                <%= label_tag :name, 'Name', {class: 'form-label'} %>
                <%= text_field_tag :name, '', {class: 'form-input'} %>
            </div>
        </div>
        <div class='form-group'>
            <div class="column col-9 col-sm-12">
                <%= label_tag :remote_db_one, 'First Connection', class: 'form-label' %>
                <%= select_tag :remote_db_one,
                    options_for_select(@remote_dbs.collect{ |rdb| [rdb.name, rdb.id] }),
                    {class: 'form-select'} %>
                <%= label_tag :remote_db_two, 'Second Connection', class: 'form-label' %>
                <%= select_tag :remote_db_two,
                    options_for_select(@remote_dbs.collect{ |rdb| [rdb.name, rdb.id] }),
                    {class: 'form-select'} %>
                <%= hidden_field_tag :join_db, @join_db_id %>
            </div>
        </div>
        <br />
        <%= submit_tag 'Next', class: 'btn btn-success' %>
    <% end %>
</div>