<div class="form-group">
    <%= form_for @mapping do |form| %>
        <div class='form-group'>
            <div class="column col-9 col-sm-12">
                <%= form.label :name, class: 'form-label' %>
                <%= form.text_field :name, class: 'form-input' %>
            </div>
        </div>
        <div class='form-group'>
            <div class="column col-9 col-sm-12">
                <%= form.label :remote_db_one, 'First Connection', class: 'form-label' %>
                <%= form.select(:remote_db_one,
                    @remote_dbs.map{|rdb| [rdb.name, rdb.id]}, 
                    {}, {class: 'form-select'}) %>
                <%= form.label :remote_db_one, 'Second Connection', class: 'form-label' %>
                <%= form.select(:remote_db_one,
                    @remote_dbs.map{|rdb| [rdb.name, rdb.id]}, 
                    {}, {class: 'form-select'}) %>
            </div>
        </div>
                <div class='form-group'>
            <div class="column col-9 col-sm-12">
                <%= form.label :table_one, 'First Table', class: 'form-label' %>
                <%= form.select(:table_one,
                    @tables.map{|table| [table, table]}, 
                    {}, {class: 'form-select'}) %>
                <%= form.label :remote_db_one, 'Second Table', class: 'form-label' %>
                <%= form.select(:remote_db_one,
                    @tables.map{|table| [table, table]}, 
                    {}, {class: 'form-select'}) %>
            </div>
        </div>
                <div class='form-group'>
            <div class="column col-9 col-sm-12">
                <%= form.label :remote_db_one, 'First Connection', class: 'form-label' %>
                <%= form.select(:remote_db_one,
                    @remote_dbs.map{|rdb| [rdb.name, rdb.id]}, 
                    {}, {class: 'form-select'}) %>
                <%= form.label :remote_db_one, 'Second Connection', class: 'form-label' %>
                <%= form.select(:remote_db_one,
                    @remote_dbs.map{|rdb| [rdb.name, rdb.id]}, 
                    {}, {class: 'form-select'}) %>
            </div>
        </div>
        <br />
        <%= form.submit class: "button", class: 'btn btn-success' %>
    <% end %>
</div>