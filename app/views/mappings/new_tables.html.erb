<div class="form-group">
    <%= form_tag mappings_new_tables_path, method: :get do |form| %>
        <div class='form-group'>
            <div class="column col-9 col-sm-12">
                <%= label_tag :table_one, 'First Table', class: 'form-label' %>
                <%= select_tag :table_one,
                    options_for_select(@table_one_options.collect{|table| [table, table]}), 
                    {class: 'form-select'} %>
                <%= label_tag :table_two, 'Second Table', class: 'form-label' %>
                <%= select_tag :table_two,
                    options_for_select(@table_two_options.collect{|table| [table, table]}), 
                    {class: 'form-select'} %>

                <%= hidden_field_tag :join_db, @join_db_id %>
                <%= hidden_field_tag :remote_db_one, @remote_db_one.id %>
                <%= hidden_field_tag :remote_db_two, @remote_db_two.id %>
            </div>
        </div>
        <br />
        <%= submit_tag "Next", class: 'btn btn-success' %>
    <% end %>
</div>