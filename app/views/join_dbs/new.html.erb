<div class="form-group">
    <%= form_for @join_db do |form| %>
        <div class='form-group'>
            <%= form.label :nickname, class: 'form-label' %>
            <%= form.text_field :name, class: 'form-input' %>
        </div>
        <div class='form-group'>
            <%= form.label :choose_a_username, class: 'form-label' %>
            <%= form.text_field :username, class: 'form-input' %>
            <%= form.label :choose_a_password, class: 'form-label' %>
            <%= form.password_field :password, class: 'form-input' %>
        <div>
        <br />
        <%= form.submit 'Create Warehouse', class: 'btn btn-success' %>
    <% end %>
</div>