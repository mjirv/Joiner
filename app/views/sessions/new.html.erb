<!-- app/views/sessions/new.html.erb -->

<p>Please enter your Joiner credentials, or 
<%= link_to 'sign up', '/signup', style: "color: #91cb3e; font-weight: bold" %>
if you haven't yet!</p>
<div class="infoTile">
  <%= form_tag '/login' do %>
    <p>
      Email: <%= text_field_tag :email, nil, class: "form-input" %>
      <br />
      Password: <%= password_field_tag :password, nil, class: "form-input" %>
      <br />
      <%= submit_tag "Submit", class: "btn btn-primary" %>
    </p>

  <% end %>
</div>